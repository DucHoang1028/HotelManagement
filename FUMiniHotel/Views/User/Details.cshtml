@model FUMiniHotel.DAO.ViewModel.UserViewModel

<div class="container my-5 p-4 bg-white shadow-sm rounded">
    <h2>User Details</h2>

    <table class="table">
        <tr>
            <th>User ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>First Name</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td>@Model.PhoneNumber</td>
        </tr>
    </table>

    <a href="@Url.Action("Manage", "User")" class="btn btn-primary">Back to Manage</a>
</div>