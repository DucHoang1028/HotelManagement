@model FUMiniHotel.Models.Question

@{
    ViewData["Title"] = "Answer Question";
}

<div class="container mt-4">
    <h2>Answer Question</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <h5>Question: @Model.QuestionText</h5>
            <form asp-action="Answer" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="answerText" class="form-label">Answer</label>
                    <textarea id="answerText" name="answerText" class="form-control" rows="4" required></textarea>
                    <!-- Removed asp-validation-for since answerText is not a model property -->
                </div>
                <div class="form-group form-check mt-3">
                    <input type="checkbox" class="form-check-input" id="isFeatured" name="isFeatured">
                    <label class="form-check-label" for="isFeatured">Feature this Q&A on the public page</label>
                </div>
                <div class="form-group mt-3">
                    <label for="audience" class="form-label">Audience</label>
                    <select id="audience" name="audience" class="form-select">
                        <option value="@FUMiniHotel.Models.Audience.Guest">Guest</option>
                        <option value="@FUMiniHotel.Models.Audience.HotelOwner">Hotel Owner</option>
                        <option value="@FUMiniHotel.Models.Audience.Both">Both</option>
                    </select>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Submit Answer</button>
                    <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}